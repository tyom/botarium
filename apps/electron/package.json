{
  "name": "@botarium/electron",
  "version": "0.1.0",
  "description": "Botarium desktop application",
  "type": "module",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "bun run build:preload && VITE_DEV=1 concurrently -k \"bun run --filter @botarium/ui dev:server\" \"wait-on http://localhost:5173 && electron .\"",
    "build:preload": "bun build src/preload.ts --outfile=dist/preload.cjs --target=node --format=cjs --external=electron",
    "build": "bun run build:preload && bun run scripts/compile-bots.ts && bun run --filter @botarium/ui build",
    "package": "bun run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "es-toolkit": "^1.32.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "pino-pretty": "^13.1.3",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "io.botarium.app",
    "productName": "Botarium",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist/app"
    },
    "extraMetadata": {
      "main": "dist/electron.cjs"
    },
    "files": [
      "dist/**/*",
      "!dist/slack-emulator",
      "!dist/bots",
      "!dist/app",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/slack-emulator",
        "to": "slack-emulator"
      },
      {
        "from": "dist/bots",
        "to": "bots",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
